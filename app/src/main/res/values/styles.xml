<resources>


    <style name="AppTheme" parent="MyThemeRed" />

    <!-- 网易红为主色调 -->
    <style name="MyThemeRed" parent="Theme.AppCompat.Light.NoActionBar">

        <!--选中状态icon的颜色和字体颜色-->
        <item name="colorPrimary">@color/colorTheme</item>
        <item name="colorPrimaryDark">@color/colorTheme</item>
        <item name="colorAccent">@color/colorTheme</item>
        <!--正常状态下字体颜色和icon颜色-->
        <!--<item name="android:textColorPrimary">@color/colorTheme</item>-->
    </style>

    <!--全屏加透明-->
    <style name="TranslucentFullScreenTheme" parent="FullScreenTheme">
        <item name="android:windowBackground">@color/translate</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--全屏-->
    <style name="FullScreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="TitleBar">
        <item name="android:layout_height">@dimen/titlebar_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/colorTheme</item>
        <item name="android:paddingTop">25dp</item>
    </style>

    <declare-styleable name="BannerIndicator">
        <attr name="space" format="dimension" />
    </declare-styleable>

    <declare-styleable name="BottomTabLayout">
        <attr name="icon_size" format="dimension" />
        <attr name="text_size" format="dimension" />
        <attr name="text_color" format="color" />
        <attr name="select_color" format="color" />
    </declare-styleable>

    <declare-styleable name="AutoLayout">
        <attr name="vertical_space" format="dimension" />
        <attr name="horizontal_space" format="dimension" />
    </declare-styleable>
</resources>
